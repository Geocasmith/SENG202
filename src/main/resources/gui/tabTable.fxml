<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Accordion?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.StackPane?>

<BorderPane fx:id="tabTable" fx:controller="gui.TabTableController" nodeOrientation="LEFT_TO_RIGHT" prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
   <center>
      <StackPane prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
         <children>
            <TableView fx:id="mainTableView" nodeOrientation="LEFT_TO_RIGHT" StackPane.alignment="CENTER" />
         </children>
      </StackPane>
   </center>
   <bottom>
      <Accordion BorderPane.alignment="CENTER">
         <panes>
            <TitledPane animated="false" text="Toggle Columns">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <FlowPane fx:id="mainTableTogglePane" hgap="10.0" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0" vgap="10.0" BorderPane.alignment="CENTER" />
                     </center>
                     <bottom>
                        <ToggleButton fx:id="mainTableToggleAllButton" mnemonicParsing="false" onAction="#toggleAllTableCols" selected="true" text="Toggle All" BorderPane.alignment="CENTER_LEFT" />
                     </bottom>
                  </BorderPane>
               </content>
            </TitledPane>
            <TitledPane animated="false" text="Add Data">
               <content>
                  <BorderPane prefHeight="200.0" prefWidth="200.0">
                     <center>
                        <FlowPane fx:id="mainTableAddPane" hgap="10.0" prefHeight="200.0" prefWidth="200.0" vgap="10.0" BorderPane.alignment="CENTER">
                           <children>
                              <TextField fx:id="mainTableAddCaseNumberField" promptText="Case Number" />
                              <TextField fx:id="mainTableAddDateField" promptText="Date" />
                              <TextField fx:id="mainTableAddBlockField" promptText="Block" />
                              <TextField fx:id="mainTableAddIUCRField" promptText="IUCR" />
                              <TextField fx:id="mainTableAddPrimaryDescField" promptText="Primary Description" />
                              <TextField fx:id="mainTableAddSecondaryDescField" promptText="Secondary Description" />
                              <TextField fx:id="mainTableAddLocationDescField" promptText="Location Description" />
                              <TextField fx:id="mainTableAddArrestField" promptText="Arrest" />
                              <TextField fx:id="mainTableAddDomesticField" promptText="Domestic" />
                              <TextField fx:id="mainTableAddBeatField" promptText="Beat" />
                              <TextField fx:id="mainTableAddWardField" promptText="Ward" />
                              <TextField fx:id="mainTableAddFBICDField" promptText="FBICD" />
                              <TextField fx:id="mainTableAddXCoordField" promptText="X-Coordinate" />
                              <TextField fx:id="mainTableAddYCoordField" promptText="Y-Coordinate" />
                              <TextField fx:id="mainTableAddLatitudeField" promptText="Latitude" />
                              <TextField fx:id="mainTableAddLongitudeField" promptText="Longitude" />
                           </children>
                        </FlowPane>
                     </center>
                     <bottom>
                        <FlowPane prefHeight="25.0" prefWidth="779.0" BorderPane.alignment="CENTER">
                           <children>
                              <Button fx:id="mainTableAddRecordButton" mnemonicParsing="false" onAction="#getRecordFromTextFields" text="Add Record" />
                              <Label fx:id="mainTableAddRecordLabel">
                                 <FlowPane.margin>
                                    <Insets left="10.0" />
                                 </FlowPane.margin>
                              </Label>
                           </children>
                        </FlowPane>
                     </bottom>
                  </BorderPane>
               </content>
            </TitledPane>
         </panes>
      </Accordion>
   </bottom>
</BorderPane>
